<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guestbook">
	
	<select id="selectList" resultType="com.javaex.vo.GuestbookVo">
		<![CDATA[
			select  no,
	        		name,
	        		password,
	        		content,
					reg_date regDate 
			from guestbook
			order by no desc
		]]>
	</select>
	
	
	<insert id="guestbookInsert" parameterType="com.javaex.vo.GuestbookVo" >
		<![CDATA[
			insert into guestbook
			values (seq_guestbook_no.nextval, #{name}, #{password}, #{content}, sysdate)
		]]>
	</insert>

	
	<select id="getGuest" parameterType="int" resultType="com.javaex.vo.GuestbookVo">
		<![CDATA[
			select no,
				name,
				password,
				content,
				reg_date regDate
			from guestbook
			where no = #{no}
		]]>
	</select>

	
	<select id="checkGuest" parameterType="com.javaex.vo.GuestbookVo" resultType="com.javaex.vo.GuestbookVo">
		<![CDATA[
			select no,
				password
			from guestbook
			where no = #{no}
			and password = #{password}
		]]>
	</select>
	
	
	<delete id="guestbookDelete" parameterType="com.javaex.vo.GuestbookVo">
		<![CDATA[
			delete from guestbook
			where no = #{no}
			and password = #{password}
		]]>
	</delete>

</mapper>